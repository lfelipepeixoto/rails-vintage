<div class="container">
  <br>
  <h4>My cars</h4>
  <br>
  <div class="row" id="ads">
    <!-- Category Card -->
    <% @user_cars.each do |car| %>
      <div class="col-md-4">
        <div class="card rounded">
          <div class="card-image">
            <% if car.photo.attached? %>
              <%= cl_image_tag car.photo.key, crop: :fit, class:"car-image" %>
            <% end %>
          </div>
          <div class="card-image-overlay m-auto">
          </div>
          <div class="card-body text-center">
            <div class="ad-title m-auto">
              <h5><%= car.model %></h5>
            </div>
        <a class="ad-btn" <%= link_to car_path(car), class:"text-decoration-none" do %> VIEWS </a>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
