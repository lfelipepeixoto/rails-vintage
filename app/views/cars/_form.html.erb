	<div class="container">
		<div class="row">
    <%= simple_form_for @car do |f| %>
			<div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3">
				<form class="register-form">
					<h2 class="text-center text-success">Register Car</h2>
					<hr>
				  	<div class="form-group">
				    	<%= f.input :manufacturer %>
				  	</div>
				  	<div class="form-group">
				    	<%= f.input :model %>
				  	</div>
				  	<div class="form-group">
				    	<%= f.input :year %>
				  	</div>
            <div class="form-group">
				    	<%= f.input :color %>
				  	</div>
            <div class="form-group">
				    	 <%= f.input :price %>
				  	</div>
            <div class="form-group">
				    	<%= f.input :photo, as: :file, multiple: true %>
				  	</div>
                <div class="form-group">
				    	<%= f.submit class: 'btn btn-success' %>
				  	</div>
				  	<hr>
				</form>
			</div>
    <% end %>
		</div>
	</div>
