<!DOCTYPE html>
<html>
  <head>
    <title>Vintage Auto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>

  <body>

    <% if flash[:notice].present? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
      $(document).ready(function () {
        $('#order_form').submit(function () {
          return confirm('Você tem certeza que deseja enviar o pedido?');
        });
      });
    </script>

    <script>
      $(document).ready(function(){
        // Seu código jQuery para dropdown aqui...
        $('.nav-list > li').has('.nav-dropdown').hover(
          function(){
            $(this).children('.nav-dropdown').stop(true, true).slideDown(200);
          },
          function(){
            $(this).children('.nav-dropdown').stop(true, true).slideUp(200);
          }
        );
      });
    </script>
    <%= render "layouts/navbar" %>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= render "layouts/footer" %>


  </body>
</html>
